<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/iv_search_thumbnail"
        android:layout_width="96dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="2"
        android:maxWidth="80dp"
        android:ellipsize="end"
        android:text="동영상 제목동영상 제목동영상 제목동영상 제목동영상 제목동영상 제목동영상 제목"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_search_uploader"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_search_uploader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="업로더"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_search_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="조회수"
        android:textSize="7sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_thumbnail"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/toggle_option"
        app:layout_constraintEnd_toEndOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>