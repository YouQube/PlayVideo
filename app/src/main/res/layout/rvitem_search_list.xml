<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_search_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_search_thumbnail"
        android:layout_width="152dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:maxLines="2"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:text="5:14"
        android:textColor="@color/themeColor4"
        android:textSize="8sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/iv_search_thumbnail" />

    <TextView
        android:id="@+id/tv_search_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:maxLines="2"
        android:text="동영상 제목동영상 제목동영상 제목동영상 제목동영상 제목동영상 제목동영상 제목"
        android:textColor="@color/themeColor4"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_uploader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="업로더"
        android:textColor="@color/themeColor3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_title" />

    <TextView
        android:id="@+id/tv_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="조회수"
        android:textColor="@color/themeColor3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_uploader" />

    <ImageView
        android:id="@+id/iv_search_option"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/toggle_option"
        android:tint="@color/themeColor4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>