<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_channel_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/shape_circular_background"
        android:clipToOutline="true"
        android:src="@drawable/ic_temp_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="채널 명입니다다다다다다"
        android:textAlignment="center"
        android:textColor="@color/themeColor4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_channel_icon"
        app:layout_constraintStart_toStartOf="@id/iv_channel_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_channel_icon" />

    <View
        android:id="@+id/view_is_active"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_margin="2dp"
        android:background="@drawable/shape_circular_background"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="@id/iv_channel_icon"
        app:layout_constraintEnd_toEndOf="@id/iv_channel_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
